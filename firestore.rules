rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check App Check token
    function hasValidAppCheck() {
      return request.appCheckToken != null;
    }
    
    // Users collection - cho phép read không cần auth để tránh lỗi permission
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && hasValidAppCheck();
      allow update, delete: if request.auth != null && request.auth.uid == userId && hasValidAppCheck();
    }
    
    // Profiles collection
    match /profiles/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId && hasValidAppCheck();
    }
    
    // Blogs collection
    match /blogs/{blogId} {
      allow read: if true;
      allow create: if request.auth != null && hasValidAppCheck();
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId && hasValidAppCheck();
    }
    
    // Chat rooms
    match /chatRooms/{chatId} {
      allow read: if true;
      allow write: if hasValidAppCheck();
    }
    
    // Messages
    match /messages/{messageId} {
      allow read: if true;
      allow write: if hasValidAppCheck();
    }
    
    // Notifications
    match /notifications/{notificationId} {
      allow read: if true;
      allow write: if hasValidAppCheck();
    }
    
    // Chats collection
    match /chats/{chatId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && hasValidAppCheck();
      
      match /messages/{messageId} {
        allow read: if request.auth != null;
        allow write: if request.auth != null && hasValidAppCheck();
      }
    }
    
    // Comments collection
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null && hasValidAppCheck();
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.authorId && hasValidAppCheck();
    }
    
    // Stats & Reports (read-only for authenticated users)
    match /stats/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    match /reports/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Webhook logs (admin only - Cloud Functions can write)
    match /webhookLogs/{document=**} {
      allow read, write: if false;
    }
    
    // Activity logs
    match /activityLogs/{document=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Counters (internal use)
    match /_counters/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Health check (internal use)
    match /_health/{document=**} {
      allow read, write: if false;
    }
    
    // Sessions
    match /sessions/{sessionId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.userId && hasValidAppCheck();
    }
    
    // Payments
    match /payments/{paymentId} {
      allow read: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow write: if false;
    }
  }
}
